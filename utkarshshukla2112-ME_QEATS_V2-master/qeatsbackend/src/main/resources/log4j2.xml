<?xml version="1.0" encoding="UTF-8"?>


<Configuration status="WARN">
  <!-- Define beans -->
  <Beans>
    <!-- Define the bean for RestaurantRepositoryService -->
    <bean id="restaurantRepositoryService" class="com.crio.qeats.repositoryservices.RestaurantRepositoryService">
      <!-- Define any dependencies or configurations if needed -->
    </bean>
  </Beans>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>

    <File append="true"
      fileName="${env:HOME}/.gradle/daemon/runlogs/qeats_analysis_app.log"
      ignoreExceptions="false"
      name="LogFileAppender">
      <JsonLayout compact="true" eventEol="true" includeStacktrace="true">
        <KeyValuePair key="runId" value="$${ctx:runId}"/>
      </JsonLayout>
    </File>
  </Appenders>
  <Loggers>
    <Root level="WARN">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="LogFileAppender"/>
    </Root>
  </Loggers>
</Configuration>
